{% extends 'base.html.twig' %}
{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
    {% endblock %}
{% block body %}

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey }}
        </div>
    {% endif %}

        <div class="row" id="login" >
            <div class="col-md-6 offset-md-3">
                <div class="col-md-6 offset-md-3" style="background-color: #224f76">
                    <div class="well">
                        <form action="{{ path('security_login') }}" method="post">
                            <fieldset>
                                <h1><legend><i class="fa fa-lock" aria-hidden="true"></i> Connexion</legend></h1>
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input type="text" id="username" name="_username" value="{{ last_username }}"
                                           class="form-control"/>
                                </div>
                                <div class="form-group">
                                    <label for="password">Mot de passe</label>
                                    {#<p>{% if  %}</p>#}
                                    <input type="password" id="password" name="_password" class="form-control"/>
                                </div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                                <button type="submit" class="btn btn-danger col-lg-12">
                                    <i class="fa fa-sign-in" aria-hidden="true"></i> On entre
                                </button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}