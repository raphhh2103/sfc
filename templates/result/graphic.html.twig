{% extends 'base.html.twig' %}
{% block javascripts %}
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/highcharts-more.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>

    <script>

        $(function () {
            Highcharts.chart('container', {

                chart: {
                    polar: true,
                    type: 'line'
                },

                title: {
                    text: '{{ jobs }}',
                    x: -80
                },

                pane: {
                    size: '80%'
                },

                xAxis: {
                    categories: ['{{ sfc1 }}<br>{{ sfc1ig1 }}<br>{{ sfc1ig2 }}<br>{{ sfc1ig3 }}<br>{{ sfc1ig4 }}<br> ',
                        '{{ sfc2 }}<br>{{ sfc2ig1 }}<br>{{ sfc2ig2 }}<br>{{ sfc2ig3 }}<br>{{ sfc2ig4 }}<br> ',
                        '{{ sfc3 }}<br>{{ sfc3ig1 }}<br>{{ sfc3ig2 }}<br>{{ sfc3ig3 }}<br>{{ sfc3ig4 }}<br>',
                       {#'{{ sfc4 }}<br>{{sfc4ig1  }}<br>{{ sfc4ig2 }}<br>{{ sfc4ig3 }}<br>{{ sfc4ig4 }}<br>'#}],
                    tickmarkPlacement: 'on',
                    lineWidth: 0

                },
                yAxis: {
                    gridLineInterpolation: 'polygone',
                    lineWidth: 0,
                    min: 0
                },


                tooltip: {
                    shared: true,
                    pointFormat: '<span style="background-color:{series.color} ">{series.name}: <b>${point.y:,.0f}</b></br>',
                    backgroundColor: 'rgba(0, 0, 0, 0.85)',
                    style: {
                        color: '#FF0000'
                        }
                },

                legend: {
                    align: 'right',
                    verticalAlign: 'top',
                    y: 70,
                    layout: 'vertical'
                },


                series: [{

                    name: 'required level',
                    data: [{{ requiredLevel }},  4, 4, 4, 4],
                    type: 'area',
                    color: 'rgba(999, 0, 0, 0.75)'
                }, {

                    name: 'Actual level',
                    data: [{{ value }}, 2, 1, 3, 4, 1],
                    type: 'area',
                    color: 'rgba(0, 0, 999, 0.75)'
                }],
                credits:{
                    enabled: false
                }

            });
        });
    </script>
{% endblock %}
{% block body %}
    <div class="container" >

        <div id="container" style="height: 100%; width: 400px; margin: auto;"></div>
    </div>
{% endblock %}

