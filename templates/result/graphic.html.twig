{% extends 'base.html.twig' %}
{% block javascripts %}
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/highcharts-more.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>

    <script>

        $(function () {
            Highcharts.chart('container', {

                chart: {
                    polar: true,
                    type: 'line'
                },

                title: {
                    text: '{{ jobs }}',
                    x: -80
                },

                pane: {
                    size: '80%'
                },

                xAxis: {
                    categories: ['{{ sfc1}}{{ sfc1ig1}}{{ sfc1ig2}}{{ sfc1ig3}}{{ sfc1ig4}} ', '{{ sfc2 }}{{ sfc2ig1 }}{{ sfc2ig2 }}{{ sfc2ig3 }}{{ sfc2ig4 }}', 'Development', 'Customer Support',
                        'Information Technology', 'Administration','yolo'],
                    tickmarkPlacement: 'on',
                    lineWidth: 0
                },

                yAxis: {
                    gridLineInterpolation: 'polygon',
                    lineWidth: 0,
                    min: 0
                },

                tooltip: {
                    shared: true,
                    pointFormat: '<span style="color:{series.color}">{series.name}: <b>${point.y:,.0f}</b><br/>'
                },

                legend: {
                    align: 'right',
                    verticalAlign: 'top',
                    y: 70,
                    layout: 'vertical'
                },

                series: [{
                    name: 'required level',
                    data: [{{ requiredLevel }}, {{ requiredlevel1 }}, 4, 4, 4, 4],
                    pointPlacement: 'on',
                    color: 'red'
                }, {
                    name: 'Actual level',
                    data: [{{ value }}, 2, 1, 3, 4, 1],
                    pointPlacement: 'on',
                    color: 'blue',
                    backgroundColors:'blue'
                }]

            });
        });
    </script>
{% endblock %}
{% block body %}
    <div id = "container" style ="height: 100%; width: 400px;"> </div>
{% endblock %}

