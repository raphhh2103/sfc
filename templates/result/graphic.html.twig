{% extends 'base.html.twig' %}
{% block javascripts %}
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/highcharts-more.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>

    <script>

        $(function () {
           charts = Highcharts.chart('container', {

                chart: {
                    polar: true,
                    type: 'line'
                },

                title: {
                    text: 'yolo',
                    x: -80
                },

                pane: {
                    size: '80%'
                },




                yAxis: {
                    gridLineInterpolation: 'polygone',
                    lineWidth: 0,
                    min: 0
                },


                tooltip: {
                    shared: true,
                    pointFormat: '<span style="background-color:{series.color} ">{series.name}: <b>${point.y:,.0f}</b></br>',
                    backgroundColor: 'rgba(0, 0, 0, 0.85)',
                    style: {
                        color: '#FF0000'
                    }
                },

                legend: {
                    align: 'right',
                    verticalAlign: 'top',
                    y: 70,
                    layout: 'vertical'
                },


                series: [],
                credits: {
                series: [{

                    name: 'required level',
                    data: [{{ requiredLevel }},  4, 4, 4, 4],
                    type: 'area',
                    color: 'rgba(999, 0, 0, 0.75)'
                }, {

                    name: 'Actual level',
                    data: [{{ value }}, 2, 1, 3, 4, 1],
                    type: 'area',
                    color: 'rgba(0, 0, 999, 0.75)'
                }],
                credits:{
                    enabled: false
                }

            });
        });


        {% for s1 in sfc %}
       $(function () {
           for(var i = 0; i<= 6; i++)
           {
               charts.xAxis[i].add({

                   categories: ['{{ s1.sfc.NameSfc }}<br>{{ s1.indicatorGeneric1 }}<br>{{ s1.indicatorGeneric2 }}<br>{{ s1.indicatorGeneric3 }}<br>{{ s1.indicatorGeneric4 }}<br>      '],
                   tickmarkPlacement: 'on',
                   lineWidth: 0
               });
               charts.redraw();
           }}) ;

       $(function () {
           charts.addSeries({

               name: 'required level',
               data: [{{ s1.requiredLevel }},{{ s1.requiredLevel }}, {{ s1.requiredLevel }}, {{ s1.requiredLevel }}, {{ s1.requiredLevel }},{{ s1.requiredLevel }}],
               type: 'area',
               color: 'rgba(999, 0, 0, 0.75)'

           });
           charts.redraw();
       });
       $(function () {
           charts.addSeries({

               name: 'Actual level',
               data: [{{ value }}, 2, 1, 3, 4, 1],
               type: 'area',
               color: 'rgba(0, 0, 999, 0.75)'
           });
           charts.redraw();
       });



        {% endfor %}

    </script>
{% endblock %}
{% block body %}
    <div class="container">
    <div class="container" >

        <div id="container" style="height: 100%; width: 400px; margin: auto;"></div>
    </div>
{% endblock %}

